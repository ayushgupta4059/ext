{
    "name": "Hello Extensions",
    "description" : "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": "imdb_logo.png"
    },
    "background": {
	    "persistent": false,
	    "scripts": ["background.js"]
  	},
    "content_scripts": [
	    {
	      "matches": ["https://www.netflix.com/*"],
	      "js": ["jquery.min.js", "content.js"]
	    }
  	]
 }